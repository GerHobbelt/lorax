{
  "parser": "babel-eslint",
  "env": {
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended"
  ],
  "rules": {
    "no-console": 0,
    "semi": 2
  },
  "plugins": [
    "flowtype"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "classes": true,
      "forOf": true,
      "modules": true,
      "superInFunctions": true,
      "templateStrings": true
    }
  },
  "globals": {
    "Promise": true
  }
}
